model User {
  id                  Int       @id @default(autoincrement())
  fullName            String?
  email               String    @unique
  username            String?   @unique
  photoUrl            String?
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
}
